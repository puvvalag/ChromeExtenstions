
{
  "manifest_version": 2,

  "name": "National Geographic - Photo of the day",
  "short_name" : "Photo of the Day",
  "description": "Top photo every day, one click far",
  "version": "4.0",

  "browser_action": {
    "default_icon": "NatGeo.png",
    "default_popup": "popup.html" 

  },
  
  "backgroud":{
    "scripts": ["Main.js"]
  },
 
  "icons": { "16": "NatGeo.png",
             "48": "NatGeo.png",
            "128": "NatGeo.png" },

  "permissions": [
    "http://*.nationalgeographic.com/*",
    "tabs"
  ]
}
